<!DOCTYPE html>
<html lang="en">
  <head>

    <%- include('../layout/head.ejs') %> 
  </head>
  <body>
       
    <header>
      <%- include('../layout/header.ejs') %>
    </header>


  


    <h1>Book App</h1>
  </header>

  <main>
    
    <h1 id="form-title">Search Results</h1>

    <form action="/searches" method="post">
      <input id="text-input" type="text" name="search" placeholder="Enter a title " required>
      <fieldset class="fieldset">
        <label for="title">
          <span>Title</span>
          <input type="radio" name="searchBy" value="title" required>
        </label>
      </fieldset>
      <fieldset class="fieldset">
        <label for="author">
          <span>Author</span>
          <input type="radio" name="searchBy" value="author" required>
        </label>
      </fieldset>
      <button id="submit-form" type="submit">Search Google Books API</button>
    </form>
  </main>

  <footer>
    <%- include('../layout/footer.ejs') %>
  
  </footer>
</body>
</html>